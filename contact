    <script>
      // Menu burger
      const burger = document.getElementById("burger");
      const menu = document.querySelector("nav ul");

      burger.addEventListener("click", () => {
        burger.classList.toggle("active");
        menu.classList.toggle("active");
      });

      // Header scroll effect
      window.addEventListener("scroll", () => {
        const header = document.getElementById("header");
        if (window.scrollY > 50) {
          header.classList.add("scrolled");
        } else {
          header.classList.remove("scrolled");
        }
      });

      document.addEventListener("DOMContentLoaded", () => {
        // Animation des cartes de contact
        const contactCards = document.querySelectorAll('.contact-card');
        const observerOptions = {
          threshold: 0.1,
          rootMargin: "0px 0px -50px 0px"
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('animate');
            }
          });
        }, observerOptions);

        contactCards.forEach(card => {
          observer.observe(card);
        });

        // Lightbox pour images
        const images = document.querySelectorAll(".image-container img");
        const lightbox = document.getElementById("lightbox");
        const lightboxImg = lightbox.querySelector("img");
        const lightboxClose = lightbox.querySelector(".lightbox-close");

        images.forEach((img) => {
          img.addEventListener("click", () => {
            lightbox.style.display = "flex";
            lightboxImg.src = img.src;
            lightboxImg.alt = img.alt;
            document.body.style.overflow = 'hidden';
          });
        });

        const closeLightbox = () => {
          lightbox.style.display = "none";
          lightboxImg.src = "";
          lightboxImg.alt = "";
          document.body.style.overflow = 'auto';
        };

        lightboxClose.addEventListener('click', closeLightbox);
        lightbox.addEventListener("click", (e) => {
          if (e.target === lightbox) {
            closeLightbox();
          }
        });

        // Fermer la lightbox avec la touche Escape
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && lightbox.style.display === 'flex') {
            closeLightbox();
          }
        });

        // Navigation entre les formulaires
        const contactCardsNav = document.querySelectorAll('.contact-card[data-form]');
        const formContainers = document.querySelectorAll('.form-container, .cv-form-section');
        
        contactCardsNav.forEach(card => {
          card.addEventListener('click', () => {
            const formId = card.getAttribute('data-form');
            
            // Masquer tous les formulaires avec animation
            formContainers.forEach(container => {
              if (container.classList.contains('active')) {
                container.style.animation = 'fadeOutDown 0.4s ease';
                setTimeout(() => {
                  container.classList.remove('active');
                  container.style.animation = '';
                }, 400);
              }
            });
            
            // Afficher le formulaire sélectionné
            const targetForm = document.getElementById(`${formId}-container`);
            if (targetForm) {
              setTimeout(() => {
                targetForm.classList.add('active');
                targetForm.scrollIntoView({ behavior: 'smooth', block: 'start' });
              }, 450);
            }
          });
        });

        // Gestion des sélections visuelles
        const setupOptionSelection = (selector) => {
          document.querySelectorAll(selector).forEach(option => {
            const input = option.querySelector('input');
            option.addEventListener('click', function() {
              if (input.type === 'radio') {
                document.querySelectorAll(selector).forEach(opt => opt.classList.remove('selected'));
                this.classList.add('selected');
                input.checked = true;
              } else if (input.type === 'checkbox') {
                this.classList.toggle('selected');
                input.checked = !input.checked;
              }
            });
          });
        };

        setupOptionSelection('.partnership-type-option');
        setupOptionSelection('.problem-type-option');
        setupOptionSelection('.availability-option');

        // Scroll to Top
        const scrollToTopBtn = document.getElementById('scrollToTop');
        
        window.addEventListener('scroll', () => {
          if (window.pageYOffset > 300) {
            scrollToTopBtn.style.display = 'flex';
          } else {
            scrollToTopBtn.style.display = 'none';
          }
        });

        scrollToTopBtn.addEventListener('click', () => {
          window.scrollTo({
            top: 0,
            behavior: 'smooth'
          });
        });

        // Initialisation des dates
        const today = new Date();
        const minDate = today.toISOString().split('T')[0];
        
        // Date minimum pour les rendez-vous partenariat (aujourd'hui)
        const partnershipDate = document.getElementById('partnership-date');
        if (partnershipDate) {
          partnershipDate.min = minDate;
        }
        
        // Date maximum pour les incidents (aujourd'hui)
        const problemDate = document.getElementById('problem-date');
        if (problemDate) {
          problemDate.max = minDate;
        }

        // Initialisation de la date max pour la date de naissance (16 ans minimum)
        const birthdate = document.getElementById('birthdate');
        if (birthdate) {
          const maxBirthDate = new Date(today.getFullYear() - 16, today.getMonth(), today.getDate());
          birthdate.max = maxBirthDate.toISOString().split('T')[0];
        }

        // Vérification de la limitation lors de la saisie de l'ID Discord
        const discordIdInput = document.getElementById('discord_id');
        const timerMessage = document.getElementById('timer-message');
        const countdownTimer = document.getElementById('countdown-timer');
        const cvSubmitBtn = document.getElementById('cv-submit-btn');

        // Gestionnaire de limitation d'envoi de CV
        class CVLimiter {
          constructor() {
            this.storageKey = 'cv_submission_times';
            this.cooldownHours = 5;
            this.cooldownMs = this.cooldownHours * 60 * 60 * 1000;
          }

          getSubmissionHistory() {
            try {
              const history = localStorage.getItem(this.storageKey);
              return history ? JSON.parse(history) : {};
            } catch (error) {
              console.error('Erreur lors de la lecture du localStorage:', error);
              return {};
            }
          }

          saveSubmissionHistory(history) {
            try {
              localStorage.setItem(this.storageKey, JSON.stringify(history));
            } catch (error) {
              console.error('Erreur lors de l\'écriture dans le localStorage:', error);
            }
          }

          canSubmit(discordId) {
            if (!discordId || discordId.length < 18) return true;
            
            const history = this.getSubmissionHistory();
            const lastSubmission = history[discordId];
            
            if (!lastSubmission) return true;

            const timeSinceLastSubmission = Date.now() - lastSubmission;
            return timeSinceLastSubmission >= this.cooldownMs;
          }

          recordSubmission(discordId) {
            if (!discordId || discordId.length < 18) return;
            
            const history = this.getSubmissionHistory();
            history[discordId] = Date.now();
            this.saveSubmissionHistory(history);
          }

          getTimeRemaining(discordId) {
            const history = this.getSubmissionHistory();
            const lastSubmission = history[discordId];
            
            if (!lastSubmission) return 0;

            const timeSinceLastSubmission = Date.now() - lastSubmission;
            const timeRemaining = this.cooldownMs - timeSinceLastSubmission;
            
            return timeRemaining > 0 ? timeRemaining : 0;
          }

          formatTimeRemaining(ms) {
            const hours = Math.floor(ms / (1000 * 60 * 60));
            const minutes = Math.floor((ms % (1000 * 60 * 60)) / (1000 * 60));
            
            if (hours > 0) {
              return `${hours}h ${minutes.toString().padStart(2, '0')}m`;
            }
            return `${minutes}m`;
          }
        }

        // Initialiser le limiteur
        const cvLimiter = new CVLimiter();

        if (discordIdInput) {
          discordIdInput.addEventListener('input', function() {
            const discordId = this.value.trim();
            
            if (discordId.length >= 18 && /^\d{18}$/.test(discordId)) {
              if (!cvLimiter.canSubmit(discordId)) {
                const timeRemaining = cvLimiter.getTimeRemaining(discordId);
                const formattedTime = cvLimiter.formatTimeRemaining(timeRemaining);
                
                timerMessage.style.display = 'block';
                countdownTimer.textContent = formattedTime;
                cvSubmitBtn.disabled = true;
              } else {
                timerMessage.style.display = 'none';
                cvSubmitBtn.disabled = false;
              }
            } else {
              timerMessage.style.display = 'none';
              cvSubmitBtn.disabled = false;
            }
          });

          // Vérifier au chargement de la page si l'ID Discord est déjà rempli
          if (discordIdInput.value.trim().length >= 18) {
            discordIdInput.dispatchEvent(new Event('input'));
          }
        }

        // Fonction utilitaire pour gérer l'affichage du loading
        const setLoadingState = (button, spinner, textElement, isLoading) => {
          if (isLoading) {
            button.disabled = true;
            spinner.style.display = 'block';
            textElement.style.opacity = '0.5';
          } else {
            button.disabled = false;
            spinner.style.display = 'none';
            textElement.style.opacity = '1';
          }
        };

        // Gestion de la soumission du formulaire CV
        const cvForm = document.getElementById('cv-form');
        const cvConfirmation = document.getElementById('cv-confirmation');
        const cvSpinner = document.getElementById('cv-spinner');
        const cvBtnText = document.getElementById('cv-btn-text');

        if (cvForm) {
          cvForm.addEventListener('submit', async function(e) {
            e.preventDefault();

            const discordId = document.getElementById('discord_id').value.trim();

            // Vérifier la limitation
            if (!cvLimiter.canSubmit(discordId)) {
              const timeRemaining = cvLimiter.getTimeRemaining(discordId);
              const formattedTime = cvLimiter.formatTimeRemaining(timeRemaining);
              alert(`Vous avez déjà soumis une candidature récemment. Veuillez attendre ${formattedTime} avant de soumettre à nouveau.`);
              return;
            }

            // Validation de l'âge (au moins 16 ans)
            const birthdate = new Date(document.getElementById('birthdate').value);
            const age = today.getFullYear() - birthdate.getFullYear();
            if (age < 16) {
              alert('Vous devez avoir au moins 16 ans pour postuler.');
              return;
            }

            // Validation du code vestiaire (4 chiffres)
            const lockerCode = document.getElementById('locker_code').value;
            if (!/^\d{4}$/.test(lockerCode)) {
              alert('Le code vestiaire doit contenir exactement 4 chiffres.');
              return;
            }

            // Validation de l'ID Discord
            if (!/^[0-9]{18}$/.test(discordId)) {
              alert('Veuillez entrer un ID Discord valide (18 chiffres)');
              return;
            }

            setLoadingState(cvSubmitBtn, cvSpinner, cvBtnText, true);

            // Enregistrer la soumission
            cvLimiter.recordSubmission(discordId);

            // REMPLACEZ CETTE URL PAR VOTRE WEBHOOK DISCORD
            const webhookURL = "https://discord.com/api/webhooks/1420794667699802234/0jskBzrMb57Vbs2HBZs-Ay29naCza3CPi46O1NNWZl4ktgL5cgKH46PqQkNwtW3FTAHs";

            // Récupération des données du formulaire
            const availabilityCheckboxes = document.querySelectorAll('input[name="availability[]"]:checked');
            const disponibilites = availabilityCheckboxes.length > 0 
              ? Array.from(availabilityCheckboxes).map(cb => cb.value).join(', ')
              : "Non spécifié";

            const formData = {
              nom: document.getElementById('lastname').value,
              prenom: document.getElementById('firstname').value,
              date_naissance: document.getElementById('birthdate').value,
              telephone: document.getElementById('phone').value,
              rib: document.getElementById('rib').value,
              code_vestiaire: lockerCode,
              discord_id: discordId,
              poste: document.getElementById('position').value,
              experiences: document.getElementById('experience').value,
              motivations: document.getElementById('motivation').value,
              disponibilites: disponibilites,
              horaire_debut: document.getElementById('start_time').value || "Non spécifié",
              horaire_fin: document.getElementById('end_time').value || "Non spécifié"
            };

            const data = {
              content: "**📄 NOUVELLE CANDIDATURE !**",
              embeds: [
                {
                  color: 3447003,
                  title: "Candidature Restaurant Partenaire",
                  fields: [
                    { name: "👤 **Identité**", value: `${formData.prenom} ${formData.nom}`, inline: true },
                    { name: "🎮 **Discord**", value: formData.discord_id, inline: true },
                    { name: "🎂 **Date de naissance**", value: formData.date_naissance, inline: true },
                    { name: "📞 **Téléphone**", value: formData.telephone, inline: true },
                    { name: "💼 **Poste souhaité**", value: formData.poste, inline: true },
                    { name: "🏦 **RIB**", value: `\`${formData.rib}\``, inline: false },
                    { name: "🔐 **Code vestiaire**", value: `\`${formData.code_vestiaire}\``, inline: true },
                    { name: "🕐 **Disponibilités**", value: formData.disponibilites, inline: true },
                    { name: "⏰ **Horaires préférés**", value: `${formData.horaire_debut} - ${formData.horaire_fin}`, inline: true },
                    { name: "💼 **Expériences**", value: formData.experiences.substring(0, 1000) + (formData.experiences.length > 1000 ? "..." : ""), inline: false },
                    { name: "🎯 **Motivations**", value: formData.motivations.substring(0, 1000) + (formData.motivations.length > 1000 ? "..." : ""), inline: false }
                  ],
                  footer: { text: "Candidature envoyée via formulaire Restaurant Partenaire" },
                  timestamp: new Date(),
                },
              ],
            };

            try {
              const response = await fetch(webhookURL, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(data),
              });
              
              if (response.ok) {
                // Afficher le message de confirmation
                cvForm.style.display = "none";
                cvConfirmation.style.display = "block";
              } else {
                throw new Error('Erreur réseau');
              }
              
            } catch (err) {
              console.error("Erreur :", err);
              alert("❌ Une erreur est survenue lors de l'envoi de votre candidature. Veuillez réessayer.");
            } finally {
              setLoadingState(cvSubmitBtn, cvSpinner, cvBtnText, false);
            }
          });
        }

        // Gestion des autres formulaires (partenariat et problème)
        const setupFormSubmission = (formId, confirmationId, spinnerId, btnTextId) => {
          const form = document.getElementById(formId);
          const confirmation = document.getElementById(confirmationId);
          const spinner = document.getElementById(spinnerId);
          const btnText = document.getElementById(btnTextId);
          const submitBtn = form?.querySelector('button[type="submit"]');

          if (!form || !submitBtn) return;

          form.addEventListener("submit", async (e) => {
            e.preventDefault();
            
            setLoadingState(submitBtn, spinner, btnText, true);

            // REMPLACEZ CETTE URL PAR VOTRE WEBHOOK DISCORD
            const webhookURL = "https://discord.com/api/webhooks/1420794667699802234/0jskBzrMb57Vbs2HBZs-Ay29naCza3CPi46O1NNWZl4ktgL5cgKH46PqQkNwtW3FTAHs";

            // Ici vous devriez récupérer les données du formulaire spécifique
            // et construire l'objet data correspondant

            try {
              // Simuler l'envoi (remplacez par votre logique réelle)
              await new Promise(resolve => setTimeout(resolve, 2000));
              
              form.style.display = "none";
              confirmation.style.display = "block";
              
              // Réinitialiser après 5 secondes
              setTimeout(() => {
                form.reset();
                form.style.display = "block";
                confirmation.style.display = "none";
              }, 5000);
            } catch (err) {
              console.error("Erreur :", err);
              alert("❌ Une erreur est survenue, réessayez.");
            } finally {
              setLoadingState(submitBtn, spinner, btnText, false);
            }
          });
        };

        // Configurer les autres formulaires
        setupFormSubmission('partnership-form', 'partnership-confirmation', 'partnership-spinner', 'partnership-btn-text');
        setupFormSubmission('problem-form', 'problem-confirmation', 'problem-spinner', 'problem-btn-text');
      });
    </script>
  </body>
</html>
